in_t=int(input())                                                #input no.input cases
for i in range(0,in_t):
	basic_salary=int(input())                                      #input basic salary 
	if(basic_salary<1500):
		gross_salary=base_salary*2                                   #if basic salary is less than 1500 then gross salary is twice of base salary
	else:
		hra=500
		da=base_salary*0.98
		gross_salary=base_salary + hra + da                         #in other case i.e.. when base salary is more than 15k then gross salary is summation of base salary,da and hra
	print('%0.2f'%gross_salary)
